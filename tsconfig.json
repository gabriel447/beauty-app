{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "nativewind/types",
      "node"
    ],
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/types": [
        "./src/types"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
